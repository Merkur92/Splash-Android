<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FiveActivity">

    <ImageView
        android:id="@+id/arc_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arc_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/arc_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arc_2"
        app:layout_constraintBottom_toBottomOf="@+id/arc_1"
        app:layout_constraintEnd_toEndOf="@+id/arc_1"
        app:layout_constraintStart_toStartOf="@+id/arc_1" />

    <ImageView
        android:id="@+id/imageView"
        android:tint="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:src="@drawable/ic_logo_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>